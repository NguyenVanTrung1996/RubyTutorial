<div class="container">
  <% flash.each do |value| %>
    <div class="text-success text-center">
      <%= value[1] %>
    </div>
  <% end %>
  <div class="card mx-auto mt-5" style="width: 40%;">
    <div class="card-body">
      <h5 class="card-title text-center font-weight-bold">User Info</h5>
      <div class="row my-3">
        <div class="col-sm-5 col-md-3"><strong>Name:</strong></div>
        <div class="col-sm-5 col-md-9 "><%= @user.name %></div>
      </div>
      <div class="row my-3">
        <div class="col-sm-5 col-md-3"><strong>Email:</strong></div>
        <div class="col-sm-5 col-md-9"><%= @user.email %></div>
      </div>
      <%= link_to 'Edit', edit_user_path(@user) %> |
      <%= link_to 'Back', users_path %>
    </div>
  </div>
</div>
