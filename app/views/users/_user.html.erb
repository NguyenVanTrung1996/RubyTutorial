<tr>
  <th scope="row"><%= user.id %></th>
  <td><%= gravatar_for user, size: 50 %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td>
    <% if !user.admin? && !current_user?(user) %>
      <%= link_to "delete", user, method: :delete,
                    data: {confirm: "You sure?"} %>
    <% end %></td>
</tr>

