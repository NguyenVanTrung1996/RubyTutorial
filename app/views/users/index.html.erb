<% provide :title, "List user" %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <table class="table table-striped">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
        </tr>
        <tbody>
        <% @user.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>