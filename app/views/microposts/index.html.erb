<p id="notice"><%= notice %></p>
<div class="container">
  <button type="button" class="btn btn-primary">
    Microposts <span class="badge badge-pill badge-warning"><%= @microposts.count %></span>
    <span class="sr-only">unread messages</span>
  </button>
  <%= link_to 'New Micropost', new_micropost_path %>
  <div class="mt-5 row">
    <% @microposts.each do |micropost| %>
      <div class="col-md-3">
        <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
          <div class="card-header"><%= getUser(micropost.user_id) %></div>
          <div class="card-body">
            <p class="card-text"><%= micropost.content %></p>
            <%= link_to 'Show', micropost %>
            <%= link_to 'Edit', edit_micropost_path(micropost) %>
            <%= link_to 'Destroy', micropost, method: :delete, data: {confirm: 'Are you sure?'} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>