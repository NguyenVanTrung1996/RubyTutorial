<%= provide :title, "Login" %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2" style="border: 1px solid #333; box-shadow: 2px 2px 3px #3e3e3e; padding: 40px">
      <h3 class="text-secondary p-2 text-center mb-5">Sign In</h3>

      <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group row">
        </div>
        <div class="form-group row">
          <%= f.label :email, class: "col-sm-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.text_field :email, class: "form-control" %>
          </div>

        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-sm-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <%= f.label :remember_me, class: "col-sm-9 offset-sm-3 col-form-label" do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
        <% end %>

        <div class="form-group row mt-5">
          <div class="col-sm-12 text-center">
            <%= f.submit "Login", class: "btn btn-primary" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
